/* pages/movie1/movie1.wxss */
@import '../movie/stars/stars.wxss';

.movie1-head {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.movie1-img image {
  width: 230rpx;
  height: 330rpx;
  border-radius: 10rpx;
  box-shadow:0 6rpx 10rpx 2rpx #999;
}

.movie1-right {
  padding-left: 10rpx;
}

.movie1-right-name {
  font-size: 40rpx;
  font-weight: bold;
  /* 超出文本隐藏 */
  overflow: hidden;
  /* 溢出用省略号显示 */
  text-overflow: ellipsis;
  /* 溢出不换行 */
  white-space: nowrap;
}

.movie1-right-next {
  display: flex;
  /* 可以换行 */
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #999;
}
.movie1-right-next2{
  width: 160rpx;
  height: 70rpx;
  background-color: gainsboro;
  text-align: center;
  font-size: 32rpx;
  line-height: 70rpx;
  color: rgb(92, 88, 88);
  margin-top: 70rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  box-shadow:0 6rpx 10rpx 2rpx #999;
  float: left;
}
